<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :last_name, "名前" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :first_name, "名前" %>
    <%= f.text_field :first_name %>
  </div><br>

   <div class="field">
    <%= f.label :last_name_kana, "フリガナ" %>
    <%= f.text_field :last_name_kana %>
  </div>

   <div class="field">
    <%= f.label :last_name, "フリガナ" %>
    <%= f.text_field :last_name_kana %>
  </div><br>


  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %><br />
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %><br />
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %><br />
  </div>

  <div class="field">
    <%= f.label :telephone_number, "電話番号" %>
    <%= f.telephone_field :telephone_number %><br />
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
