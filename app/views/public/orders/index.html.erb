<div class="container">
 <div class="row">
  <h5>注文履歴一覧</h5>
   <div class="col-lg-12">
    <table class="table table-bordered border-dark">
      <thead class="thead-light">
        <tr>
          <th scope="col-lg-2">注文日</th>
          <th scope="col-lg-4">配送先</th>
          <th scope="col-lg-2">注文商品</th>
          <th scope="col-lg-1">支払金額</th>
          <th scope="col-lg-1">注文詳細</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
        <tr>
          <td scope="col-lg-2"><p><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p></td>
          <td scope="col-lg-4"><p><%= order.order_address %></td>
          <% order.order_details.each do |order_detail| %>
           <td scope="col-lg-2"><p><%= order_detail.item.name %></p></td>
          <% end %>
          <td scope="col-lg-1"><p><%= order.total_payment.to_s(:delimited) %></p></td>
          <td scope="col-lg-1"><p><%= link_to "表示する", public_order_path(order), class: "btn btn-sm btn-primary" %></p></td>
        </tr>
       <% end %>
      </tbody>
     </table>
