       <% @orders.each do |order| %>
        <tr>
          <td scope="col-lg-2"><p><%= order.created_at %></p></td>
          <td scope="col-lg-3"><p><%=  %></p></td>
          <td scope="col-lg-2"><p><%= %></p></td>
          <td scope="col-lg-2"><p><%= %></p></td>
          <td scope="col-lg-2"><p><%= %></p></td>
