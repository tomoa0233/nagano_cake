<div class="container">
 <div class="row mb-2">
  <h5>商品一覧 (全<%= @items.count %>件)</h5>
 </div>
 <div class="row ">
  <% @items.each do |item| %>
   <div class="col-lg-3 mb-4">
    <%= link_to public_item_path(item.id) do %>
     <%= attachment_image_tag item, :image, format: 'jpeg', size: '200x150' %><br>
    <% end %>
    <%= item.name %><br>
    ￥<%= item.with_tax_price.to_s(:delimited) %><br>
   </div>
  <% end %>
  </div>
 <%= paginate @items %>
 </div>
</div>