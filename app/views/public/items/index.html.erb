<div class="container">
 <div class="row">
   <h5>商品一覧 (全<%= @items.count %>件)</h5>
   <div class="col-lg-3"></div>
  <table class="table table-borderless">
   <% @items.each do |item| %>
       <tr>
         <td>
          <%= link_to public_item_path(item.id) do %>
           <%= attachment_image_tag item, :image, format: 'jpeg', size: '200x150' %>
          <% end %>
         </td>
       </tr>
       <tr>
         <td><%= item.name %><br/>
         ￥<%= item.with_tax_price.to_s(:delimited) %></td>
        </tr>
    <% end %>
  </table>
    </div>
    </div>