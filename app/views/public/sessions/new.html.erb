<%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
<div class="container">
 <div class="row mb-2">
  <div class="col-lg-12">
   <h4>ログイン</h4>
  </div>
 </div>
 <div class="row mb-2">
  <div class="col-lg-1"></div>
  <div class="col-lg-11"><h5>会員の方はこちらからログイン</h5></div>
 </div>
 <div class="row mb-2">
   <div class="col-lg-2"></div>
   <div class="col-lg-2">メールアドレス</div>
   <div class="col-lg-3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %></div>
   <div class="col-lg-4"></div>
 </div>
 <div class="row mb-2">
    <div class="col-lg-2"></div>
    <div class="col-lg-2">パスワード</div>
    <div class="col-lg-3"><%= f.password_field :password, autocomplete: "current-password" %></div>
    <div class="col-lg-5"></div>
 </div>
 <div class="row mb-4">
    <div class="col-lg-3"></div>
    <div class="col-lg-4"><%= f.submit "ログイン", class: "btn btn-sm btn-primary" %></div>
    <div class="col-lg-5"></div>
 </div>
 <div class="row mb-2">
  <div class="col-lg-1"></div>
  <div class="col-lg-11"><h5>会員登録がお済みでない方</h5></div>
 </div>
 <div class="row mb-2">
  <div class="col-lg-2"></div>
  <div class="col-lg-10">こちらから新規登録を行ってください。<%= render "public/shared/links" %></div>
 </div>
</div>
<% end %>