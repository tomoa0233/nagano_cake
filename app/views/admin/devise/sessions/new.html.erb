<h2>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %><br />
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %><br />
  </div>



  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
