<div class="container">
 <div class="row">
  <div class="col-lg-2"></div>
   <h5>注文履歴詳細</h5>
  </div>
  <div class="row">
   <table class="table table-borderless">
    <% @orders.each do |order| %>
    <tbody>
     <tr>
      <td class="col-lg-3">購入者</td>
      <td class="col-lg-"><%= order.name %></td>
     </tr>
     <tr>
      <td class="col-lg-3">注文日</td>
      <td class="col-lg-"><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
     </tr>
     <tr>
      <td class="col-lg-3">配送先</td>
      <td class="col-lg-"><%= order.order_address %></td>
     </tr>
     <tr>
      <td class="col-lg-3">支払方法</td>
      <td class="col-lg-"><%= order.payment_method %></td>
     </tr>
    </tbody>
   <% end %>
   </table>
  </div>
  <div class="row">
   <div class="col-lg-9">
    <table class="table table-bordered border-dark">
     <thead class="thead-light">
      <tr>
       <th class="col-lg-2">商品名</th>
       <th class="col-lg-2">単価(税込)</th>
       <th class="col-lg-1">数量</th>
       <th class="col-lg-1">小計</th>
       <th class="col-lg-1"></th>
      </tr>
     </thead>
     <tbody>
      <% %>
       <tr>
        <td class="col-lg-2"></td>
        <td class="col-lg-2"></td>
        <td class="col-lg-1"></td>
        <td class="col-lg-1"></td>
        <td class="col-lg-1"></td>
      </tr>
      <% end %>
     </tbody>
    </div>
 </div>