<div class="container">
 <div class="row">
  <div class="col-lg-2"></div>
   <h5>商品詳細</h5>
  </div>

<div class="row">
<div class="col-lg-3"><%= attachment_image_tag @item, :image, format: 'jpeg', size: '300x250' %></div>
<div class="col-lg-1"></div>
<div class="col-lg-5">
 <table class="table table-borderless">
  <tbody>
   <tr>
    <td scope="col-lg-1">商品名</td>
    <td scope="col-lg-4"><%= @item.name %></td>
   </tr>
   <tr>
    <td scope="col-lg-1">商品説明</td>
    <td scope="col-lg-4"><%= @item.introduction %></td>
   </tr>
   <tr>
    <td scope="col-lg-1">ジャンル</td>
    <td scope="col-lg-4"><%= @item.genre.name %></td>
   </tr>
   <tr>
    <td scope="col-lg-1">税込価格(税抜価格)</td>
    <td scope="col-lg-4"><%= @item.with_tax_price %> (<%= @item.price %>) 円
   </tr>
   <tr>
    <td scope="col-lg-1">販売ステータス</td>
    <td scope="col-lg-4"><% if @item.is_active == true %>
     <%= "販売中" %>
    <% else %>
     <%= "販売停止中" %>
    <% end %></td>
   </tr>
   <tr>
    <td scope="col-lg-4"></td>
    <td scope="col-lg-2"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-sm btn-success" %></td>
   </tr>
  </tbody>
 </table>
 </div>
</div>
</div>