<div class="container">
 <div class="row">
  <div class="col-lg-3"></div>

   <div class="col-lg-5">
     <h5>新規商品登録</h5>
     <table class="table table-borderless">

      <tbody>
       <%= form_with model: @item, url: admin_items_path do |f| %>
       <tr>
        <td scope="col-lg-1">商品画像</td>
        <td scope="col-lg-4"><%= f.attachment_field :image, placeholder:"ファイルを選択" %></td>
       </tr>
       <tr>
        <td scope="col-lg-1">商品名</td>
        <td scope="col-lg-4"><%= f.text_field :name, placeholder:"商品名" %></td>
       </tr>
       <tr>
        <td scope="col-lg-1">商品説明</td>
        <td scope="col-lg-4"><%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %></td>
       </tr>
       <tr>
        <td scope="col-lg-1">ジャンル</td>
        <td scope="col-lg-4"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: "-- 選択してください --" %></td>
       </tr>
       <tr>
        <td scope="col-lg-1">税抜価格</td>
        <td scope="col-lg-4"><%= f.text_field :price, placeholder:"1000" %></td>
       </tr>
       <tr>
        <td scope="col-lg-1">販売ステータス</td>
        <td scope="col-lg-4">
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false} %>
        </td>
       </tr>
       <tr>
        <td scope="col-lg-2"></td>
        <td scope="col-lg-1"><%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
        <td scope="col-lg-1"></td>
       </tr>
      <% end %>
    </tbody>
    </table>
   </div>
   <div class="col-lg-4"></div>
  </div>
</div>