<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
<div class="container">
 <div class="row">
  <h5><%= @customer.name_display %>さんの会員情報編集</h5>
 </div>
 <div class="row">
  <div class="col-lg-1"></div>
  <div class="col-lg-7">
    <table class="table table-borderless">
     <tbody>
      <tr>
       <td class="col-lg-3">会員ID</td>
       <td class="col-lg-4"><%= @customer.id %></td>
      </tr>
      <tr>
       <td class="col-lg-3">氏名</td>
       <td class="col-lg-2"><%= f.text_field :last_name %></td>
       <td class="col-lg-2"><%= f.text_field :first_name %></td>
      </tr>
      <tr>
       <td class="col-lg-3">フリガナ</td>
       <td class="col-lg-2"><%= f.text_field :last_name_kana %></td>
       <td class="col-lg-2"><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
       <td class="col-lg-3">郵便番号</td>
       <td class="col-lg-5"><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
       <td class="col-lg-3">住所</td>
       <td class="col-lg-5"><%= f.text_field :address %></td>
      </tr>
      <tr>
       <td class="col-lg-3">電話番号</td>
       <td class="col-lg-5"><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
       <td class="col-lg-3">メールアドレス</td>
       <td class="col-lg-5"><%= f.text_field :email %></td>
      </tr>
      <tr>
       <td class="col-lg-3">会員ステータス</td>
       <td class="col-lg-5">
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効", {value: :true} %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会", {value: :false} %>
       </td>
      </tr>
      <tr>
       <td class="col-lg-"></td>
       <td class="col-lg-2"><%= f.submit '変更を保存', class: "btn btn-sm btn-success" %></td>
      </tr>
     </tbody>
    </table>
  </div>
 </div>

</div>
<% end %>

