 <div class="container">
  <div class="row">
   <h5>
    <% if params[:customer_id] == nil %>
     <%= "注文履歴一覧" %>
    <% else %>
     <%= @customer.name_display + "さんの注文履歴" %>
    <% end %>
   </h5>
  </div>
  <div class="row">
    <div class="col-lg-10">
     <table class="table table-bordered border-dark">
      <thead class="thead-light">
        <tr>
          <th scope="col-lg-3">購入日時</th>

           <% if params[:customer_id] == nil %>
            <th scope="col-lg-2">
             <%= "購入者" %>
            </th>
           <% end %>

          <th scope="col-lg-2">注文個数</th>
          <th scope="col-lg-2">注文ステータス</th>
        </tr>
      <tbody>
        <% @orders.each do |order| %>
         <tr>
           <td scope="col-lg-3">
            <% if params[:customer_id] == nil %>
             <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% else %>
             <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_customer_path(order.id) %>
            <% end %>
           </td>

            <% if params[:customer_id] == nil %>
             <td scope="col-lg-2">
              <%= link_to order.name, admin_path(customer_id: order.customer.id) %>
             </td>
            <% end %>

           <td scope="col-lg-2"><%= order.order_details.sum(:amount) %></td>
           <td scope="col-lg-3"></td>
         </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @orders %>
   </div>
  </div>
</div>